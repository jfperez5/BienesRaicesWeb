---
const { propiedad } = Astro.props;
  import ArrowRight from "@/components/icon/ArrowRight.astro";
  import Area from "@/components/icon/Area.astro";
  import Cama from "@/components/icon/Cama.astro";
  import Ducha from "@/components/icon/Ducha.astro";
  import Pin from "@/components/icon/Pin.astro";
---

<div id="carousel" class="h-full w-[350px] m-1 flex-shrink-0 cursor-pointer">
  <div
    class="rounded-2xl overflow-hidden mb-2 h-[210px] relative top-0 left-0 img-brillo"
  >
    <img
      class="size-[100%] object-cover absolute"
      src={`/public/img/propiedades/propiedad-${propiedad.id}.png`}
      alt={propiedad.id}
    />
    <span
      class="absolute flex gap-2 top-3 left-4 border border-white text-xs rounded-xl px-4 py-2 font-semibold hover:bg-white hover:text-black"
    >
      Detalles
      <ArrowRight />
    </span>
  </div>
  <div class="flex flex-col gap-4">
    <div class="gap-4 border-b-[1px] border-gray-400">
      <div class="flex items-center gap-2">
        <Cama class="text-slate-700 size-12" />
        <h5 class="capitalize text-slate-700 font-semibold">
          Habitaciones:
          <strong> {propiedad.habitaciones}</strong>
        </h5>
      </div>
      <div class="flex items-center gap-2">
        <Ducha class="text-slate-700 size-12" />
        <h5 class="capitalize text-slate-700 font-semibold">
          Baños:
          <strong>{propiedad.baños}</strong>
        </h5>
      </div>
      <div class="flex items-center gap-2">
        <Area class="text-slate-700 size-12" />
        <h5 class="capitalize text-slate-700 font-semibold">
          Superficie:
          <strong>{propiedad.superficie}</strong>
        </h5>
      </div>
    </div>
  </div>
  <div class="flex flex-col p-2 text-slate-700">
    <h5 class="text-2xl capitalize font-semibold">{propiedad.tipo}</h5>
    <h5 class="text-xl capitalize font-semibold">
      {propiedad.ambientes} Ambientes
    </h5>
    <span class="text-lg font-semibold capitalize"
      >{propiedad.precio} USD, {propiedad.operacion}</span
    >
    <div class="flex gap-2">
      <span>{propiedad.localidad}, {propiedad.provincia}</span>
      <Pin />
    </div>
  </div>
</div>
<style>
  .img-brillo::after {
    position: absolute;
    top: 0;
    left: -75%;
    z-index: 2;
    display: block;
    content: "";
    width: 50%;
    height: 100%;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.3) 100%
    );
    transform: skewX(-20deg);
  }
  .img-brillo img {
    transition: transform 0.5s;
  }
  .img-brillo:hover {
    img {
      transform: scale(1.1);
    }
  }

  .img-brillo:hover:after {
    animation: imgBrillo 1s;
  }

  @keyframes imgBrillo {
    100% {
      left: 125%;
    }
  }
</style>
